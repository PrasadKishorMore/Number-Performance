
 class Main{
    
    public static void main(String args[]){
        
        int num = 125;
        
        int rev = 0;
        
        while(num > 0){
            
            int digit = num%10;
            rev = rev*10+digit;
            num /= 10;
        }
        
        System.out.println(rev);
        
        if(num == rev){
            System.out.println("Number is palindrom");
        }else{
            System.out.println("Number is't palindrom");
        }
    }
}
